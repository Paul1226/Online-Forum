---
interface Props {
	title: string;
}

const { title } = Astro.props;

// fonts
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/800.css';

import '@fontsource/merriweather/400.css';
import '@fontsource/merriweather/700.css';
import '@fontsource/merriweather/900.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-charade text-sm text-white font-poppins min-h-screen relative overflow-hidden">
		<slot />
	</body>
</html>
<style is:global>
	*{
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body::before{
		content: '';

		position: absolute;
		bottom: -40%;
		right: -8%;
		z-index: -10;

		aspect-ratio: 1 / 1;
		width: 600px;

		border: 1px solid #ABABAB20;
		border-radius: 500%;
	}
	body::after{
		content: '';

		position: absolute;
		bottom: -40%;
		right: -8%;
		z-index: -10;

		aspect-ratio: 1 / 1;
		width: 780px;

		border: 1px solid #ABABAB20;
		border-radius: 500%;
	}
</style>
